chatbackend.com {
    reverse_proxy api:8000

    # Enable compression
    encode gzip

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }

    # Logging
    log {
        output stdout
        format console
    }
}

# Redirect www to non-www
www.chatbackend.com {
    redir https://chatbackend.com{uri} permanent
}
