# Production Environment Variables
# Copy this to .env and fill in the values

# Database (use strong password!)
POSTGRES_USER=orchestrator
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=orchestrator

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# OpenAI API Key
OPENAI_API_KEY=sk-...

# Anthropic API Key (if using anthropic)
# ANTHROPIC_API_KEY=sk-ant-...

# Embedding settings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Google OAuth (for real API mode)
# Currently using mock data - no OAuth needed
USE_MOCK_GOOGLE=true

# To use real Google APIs:
# 1. Create OAuth credentials at https://console.cloud.google.com/apis/credentials
# 2. Add https://chatbackend.com/api/v1/auth/callback as redirect URI
# 3. Set USE_MOCK_GOOGLE=false and fill in credentials below
# 4. Note: While OAuth is in "Testing" mode, only test users added in Google Console can login
#    To allow any user, submit for verification at https://console.cloud.google.com/apis/credentials/consent
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=https://chatbackend.com/api/v1/auth/callback
