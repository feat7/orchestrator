# Database
DATABASE_URL=postgresql+asyncpg://orchestrator:orchestrator@localhost:5432/orchestrator

# Redis
REDIS_URL=redis://localhost:6379

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Embedding settings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Google OAuth (for real API mode)
# Master switch - set to false to use real Google APIs
USE_MOCK_GOOGLE=true

# Per-service mock settings (optional)
# When USE_MOCK_GOOGLE=false, these allow using mock data for specific services
# Useful for development when you only have some APIs configured
# Leave unset to follow USE_MOCK_GOOGLE setting
# USE_MOCK_GMAIL=true
# USE_MOCK_GCAL=true
# USE_MOCK_GDRIVE=true

# Google OAuth credentials (required when USE_MOCK_GOOGLE=false)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback